{
    "name": "idb-stores",
    "packageManager": "yarn@4.1.1",
    "version": "0.0.9",
    "sideEffects": false,
    "engines": {
        "node": ">=18"
    },
    "type": "module",
    "main": "cjs/index.js",
    "module": "dist/index.js",
    "exports": {
        ".": "./dist/index.js",
        "./cjs": "./cjs/index.js"
    },
    "devDependencies": {
        "@eslint/js": "^9.0.0",
        "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
        "@total-typescript/ts-reset": "^0.5.1",
        "@types/node": "^20.12.7",
        "eslint": "^9.0.0",
        "globals": "^15.0.0",
        "prettier": "^3.2.5",
        "puppeteer": "^22.6.5",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.7.0",
        "vite": "^5.2.9"
    },
    "dependencies": {
        "idb-keyval": "^6.2.1",
        "loglevel": "^1.9.1",
        "zod": "^3.22.4"
    },
    "scripts": {
        "format": "prettier --write ./**/*.{ts,js,json,yml,md} --ignore-path .gitignore --log-level=warn --cache --cache-strategy=content --cache-location=.cache/prettier --no-editorconfig",
        "lint": "eslint --cache --cache-strategy=content --cache-location .cache/eslint",
        "build:es": "rm -rf dist && tsc --project tsconfig.json",
        "build:cjs": "rm -rf cjs && tsc --project tsconfig.cjs.json || exit 0",
        "build": "yarn build:es & yarn build:cjs",
        "test:build": "vite build --config ./tests/vite.config.ts",
        "test:run": "node ./tests/script/puppeteerRunner.mjs",
        "test": "yarn test:build && yarn test:run"
    },
    "license": "MIT"
}
